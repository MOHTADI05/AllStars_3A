{% extends 'base.html.twig' %}

{% block title %}Aliment index{% endblock %}

{% block body %}
    <h1>Aliment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>               
                <th>NbCalories</th>
                <th>Informations_nutritionnelles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aliment in aliments %}
            <tr>
                <td>{{ aliment.id }}</td>
                <td>{{ aliment.Nom }}</td>
                
                <td>{{ aliment.nbCalories }}</td>
                <td>{{ aliment.InformationsNutritionnelles }}</td>
                <td>
                    <a href="{{ path('app_aliment_show', {'id': aliment.id}) }}">show</a>
                    <a href="{{ path('app_aliment_edit', {'id': aliment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_aliment_new') }}">Create new</a>
{% endblock %}
