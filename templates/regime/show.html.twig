{% extends 'back_.html.twig' %}

{% block title %}Regime{% endblock %}

{% block body %}
    <h1>Regime</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ regime.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ regime.name }}</td>
            </tr>
            <tr>
                <th>Discription</th>
                <td>{{ regime.discription }}</td>
            </tr>
            <tr>
                <th>DDate</th>
                <td>{{ regime.dDate ? regime.dDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nb_calorie</th>
                <td>{{ regime.nbCalorie }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ regime.duree ? regime.duree|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    

    <a href="{{ path('app_regime_index') }}">back to list</a>

    <a href="{{ path('app_regime_edit', {'id': regime.id}) }}">edit</a>

    {{ include('regime/_delete_form.html.twig') }}
